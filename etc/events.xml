<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">

    <!-- products -->

    <event name="catalog_product_save_before">
        <observer name="kauflnd_observer_product_addupdate_before"
                  instance="M2E\Kaufland\Observer\Product\AddUpdate\Before"
                  shared="false"/>
    </event>
    <event name="catalog_product_save_after">
        <observer name="kauflnd_observer_product_addupdate_after"
                  instance="M2E\Kaufland\Observer\Product\AddUpdate\After"
                  shared="false"/>
    </event>
    <event name="catalog_product_delete_before">
        <observer name="kauflnd_observer_product_delete"
                  instance="M2E\Kaufland\Observer\Product\Delete"
                  shared="false"/>
    </event>

    <event name="catalog_product_import_bunch_save_after">
        <observer name="kauflnd_observer_import_bunch"
                  instance="M2E\Kaufland\Observer\Import\Bunch"/>
    </event>

    <!-- attributes -->

    <event name="catalog_product_attribute_update_before">
        <observer name="kauflnd_observer_product_attribute_update_before"
                  instance="M2E\Kaufland\Observer\Product\Attribute\Update\Before"
                  shared="false"/>
    </event>

    <!-- stock items -->

    <event name="cataloginventory_stock_item_save_before">
        <observer name="kauflnd_observer_stockitem_save_before"
                  instance="M2E\Kaufland\Observer\StockItem\Save\Before"
                  shared="false"/>
    </event>
    <event name="cataloginventory_stock_item_save_after">
        <observer name="kauflnd_observer_stockitem_save_after"
                  instance="M2E\Kaufland\Observer\StockItem\Save\After"
                  shared="false"/>
    </event>

    <!-- synchronization -->

    <event name="m2e_synchronization_before_start">
        <observer name="kauflnd_observer_indexes_disable"
                  instance="M2E\Kaufland\Observer\Indexes\Disable"
                  shared="false"/>
    </event>

    <!-- External Orders -->
    <event name="sales_order_invoice_save_after">
        <observer name="kaufland_observer_invoice_save_after"
                  instance="M2E\Kaufland\Observer\Invoice\Save\After"
                  shared="false" />
    </event>

    <!-- Order > Shipment > -->
    <event name="sales_shipment_item_save_after">
        <observer name="kauflnd_observer_shipment_item_save_after"
                  instance="M2E\Kaufland\Observer\Shipment\Item"
                  shared="false"/>
    </event>

    <!-- Order > Shipment > Track Number -->
    <event name="sales_order_shipment_track_save_after">
        <observer name="kauflnd_observer_shipment_track_save_after"
                  instance="M2E\Kaufland\Observer\Shipment\Track\Save"
                  shared="false"/>
    </event>
    <event name="sales_order_shipment_track_delete_after">
        <observer name="kauflnd_observer_shipment_track_delete_after"
                  instance="M2E\Kaufland\Observer\Shipment\Track\Delete"
                  shared="false"/>
    </event>

    <event name="sales_order_creditmemo_refund">
        <observer name="kaufland_observer_creditmemo"
                  instance="M2E\Kaufland\Observer\Creditmemo"
                  shared="false" />
    </event>

    <event name="sales_order_save_after">
        <observer name="kauflnd_observer_order_order_save_after_storemagentoorderid"
                  instance="M2E\Kaufland\Observer\Order\Save\After\StoreMagentoOrderId"
                  shared="false"/>
    </event>
    <event name="m2e_sales_convert_quote_item_to_order_item">
        <observer name="kauflnd_observer_order_quote"
                  instance="M2E\Kaufland\Observer\Order\Quote"
                  shared="false"/>
    </event>
    <event name="sales_model_service_quote_submit_before">
        <observer name="kauflnd_observer_order_service_quote_submit_before"
                  instance="M2E\Kaufland\Observer\Order\Service\Quote\Submit\Before"
                  shared="false"/>
    </event>
    <event name="sales_quote_address_collect_totals_after">
        <observer name="kauflnd_observer_order_quote_address_collect_totals_after"
                  instance="M2E\Kaufland\Observer\Order\Quote\Address\Collect\Totals\After"
                  shared="false"/>
    </event>

    <!-- cron keep alive -->

    <event name="m2e_kaufland_cron_keep_alive_activate">
        <observer name="kauflnd_cron_keep_alive_activate"
                  instance="M2E\Kaufland\Model\Cron\Strategy\Observer\KeepAlive"/>
    </event>

    <event name="model_save_before">
        <observer name="kauflnd_cron_keep_alive_model_save"
                  instance="M2E\Kaufland\Model\Cron\Strategy\Observer\KeepAlive"/>
    </event>

    <event name="model_load_before">
        <observer name="kauflnd_cron_keep_alive_model_load"
                  instance="M2E\Kaufland\Model\Cron\Strategy\Observer\KeepAlive"/>
    </event>

    <event name="core_collection_abstract_load_before">
        <observer name="kauflnd_cron_keep_alive_collection_load"
                  instance="M2E\Kaufland\Model\Cron\Strategy\Observer\KeepAlive"/>
    </event>

    <!-- cron progress -->

    <event name="m2e_kaufland_cron_progress_start">
        <observer name="kauflnd_cron_progress_start"
                  instance="M2E\Kaufland\Model\Cron\Strategy\Observer\Progress"/>
    </event>

    <event name="m2e_kaufland_cron_progress_set_percentage">
        <observer name="kauflnd_cron_progress_set_percentage"
                  instance="M2E\Kaufland\Model\Cron\Strategy\Observer\Progress"/>
    </event>

    <event name="m2e_kaufland_cron_progress_set_details">
        <observer name="kauflnd_cron_progress_set_details"
                  instance="M2E\Kaufland\Model\Cron\Strategy\Observer\Progress"/>
    </event>

    <event name="m2e_kaufland_cron_progress_stop">
        <observer name="kauflnd_cron_progress_stop" instance="M2E\Kaufland\Model\Cron\Strategy\Observer\Progress"/>
    </event>

</config>
