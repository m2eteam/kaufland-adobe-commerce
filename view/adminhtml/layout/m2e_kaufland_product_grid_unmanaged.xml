<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="m2e_kaufland_general_handler"/>
    <head>
        <script src="M2E_Kaufland/js/Product/Unmanaged/PrepareGrid.js"/>
    </head>
    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">M2E_Kaufland::listings_items</argument>
            </action>
        </referenceBlock>

        <referenceContainer name="content">

            <container name="m2e.kaufland.listing_tabs">
                <block class="M2E\Kaufland\Block\Adminhtml\Kaufland\Listing\Tabs">
                    <arguments>
                        <argument name="active_tab" xsi:type="string">unmanaged_items</argument>
                    </arguments>
                </block>
            </container>

        </referenceContainer>

        <referenceBlock name="page.main.actions">
            <block class="M2E\Kaufland\Block\Adminhtml\Kaufland\Listing\Unmanaged\ButtonsBuilder" name="reset_button"/>
            <container name="filter_block"
                       htmlTag="div"
                       before="-"
                       htmlClass="filter_block ui">
                <block class="M2E\Kaufland\Block\Adminhtml\Account\Switcher" name="kaufland_account_switcher">
                    <arguments>
                        <argument name="has_default_option" xsi:type="boolean">false</argument>
                        <argument name="controller_name" xsi:type="string">product_grid/unmanaged</argument>
                    </arguments>
                </block>
            </container>
        </referenceBlock>

        <referenceContainer name="content">
            <uiComponent name="m2e_kaufland_product_unmanaged_grid"/>
        </referenceContainer>

    </body>

</page>
